<Window x:Class="AssettoCorsaTelemetry.Plot.PlotView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlotView" Height="{Binding CanvasHeight, Mode=TwoWay}" Width="{Binding CanvasWidth, Mode=TwoWay}">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
        <Canvas Background="Orange" Width="{Binding PlotAreaWidth}" Height="{Binding PloatAreaHeight}">
            <ContentPresenter Content="{Binding PlotCanvas, Mode=TwoWay}"/>
        </Canvas>
    </ScrollViewer>
</Window>
