<Window x:Class="AssettoCorsaTelemetry.Forces.FrictionCircleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FrictionCircleView" Height="{Binding CanvasHeight, Mode=TwoWay}" Width="{Binding CanvasWidth, Mode=TwoWay}">
    <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black">
        <ContentPresenter Content="{Binding AccelerationMap, Mode=TwoWay}"/>
    </Canvas>
</Window>
